{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "outDir": "./lib",
        "sourceMap": true,
        "lib": ["es6", "dom"],
        "target": "es6",
        "baseUrl": "src",
        "paths": {
            "common": ["./src/common/*"],
            "monsters": ["./src/cards/monsters/*"],
            "curses": ["./src/cards/curses/*"],
            "events": ["./src/events/*"],
            "phases": ["./src/phases/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}